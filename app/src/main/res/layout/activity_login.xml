<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:background="@drawable/fly_image"
    android:backgroundTintMode="add"
    android:backgroundTint="#ffffff"
    android:id="@+id/rl1"
    style="@android:style/Theme.DeviceDefault.Light.DarkActionBar"
    android:animateLayoutChanges="true"
    android:animationCache="true"
    android:alwaysDrawnWithCache="true"
    android:useDefaultMargins="true"
    android:transitionGroup="true"
    android:columnCount="10"
    android:rowCount="20"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username"
        android:id="@+id/usernameText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:layout_row="7"
        android:layout_column="0" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/username"
        android:layout_below="@+id/usernameText"
        android:layout_alignStart="@+id/usernameText"
        android:onClick="ontvclick"
        android:layout_alignParentEnd="true"
        android:shadowColor="@android:color/background_dark"
        android:textColor="#ffffff"
        android:textColorHighlight="#ffffff"
        android:textColorHint="#ffffff"
        android:textColorLink="#ffffff"
        android:layout_row="8"
        android:layout_column="0" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/passwordText"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:layout_row="11"
        android:layout_column="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_below="@+id/passwordText"
        android:layout_alignStart="@+id/passwordText"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:textColorLink="#ffffff"
        android:textColorHint="#ffffff"
        android:textColorHighlight="#ffffff"
        android:textAllCaps="false"
        android:layout_row="14"
        android:layout_column="0"
        android:alpha="0.5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/Lbutton"
        android:onClick="onButtonClick"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/password"
        android:layout_row="16"
        android:layout_column="0"
       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGNUP"
        android:id="@+id/Sbutton"
        android:onClick="onButtonClick"
        android:layout_alignTop="@+id/Lbutton"
        android:layout_alignEnd="@+id/password"
        android:layout_row="17"
        android:layout_column="0"
        android:layout_gravity="bottom|right" />


</TableLayout>
