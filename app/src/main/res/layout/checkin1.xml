<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enter seat no of passenger"
        android:id="@+id/seatno_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pass1seat"
        android:layout_below="@+id/seatno_1"
        android:layout_alignParentStart="true"
        android:inputType="number"
        android:layout_alignEnd="@+id/seatno_1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHECKIN"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="onclickpass1"
        android:background="#be505e"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/jetlayout"
        android:layout_below="@+id/pass1seat"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
